{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "extends": [
    "github>groq/renovate-config:golang",
    ":semanticCommits",
    "schedule:earlyMondays"
  ],
  "packageRules": [
    {
      "matchManagers": [
        "gomod"
      ],
      "automerge": false
    },
    {
      "matchDatasources": [
        "docker"
      ],
      "groupName": "Docker dependencies",
      "automerge": false
    },
    {
      "matchManagers": [
        "github-actions"
      ],
      "groupName": "GitHub Actions",
      "automerge": false
    }
  ]
}
